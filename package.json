{
    "name": "test",
    "version": "1.0.0",
    "type": "commonjs",
    "description": "",
    "main": "app.js",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "npx nodemon",
        "test": "NODE_ENV=test jest --runInBand --verbose",
        "clean": "rm -r _app; rm -r dist",
        "build": "npm install && npx tsc && npm install --prefix app_funds && npm run build --prefix app_funds && cp -r app_funds/build ./_app",
        "docker": "docker compose up -d --build && docker image prune -f",
        "resetdb": "psql postgresql://postgres:pw20220501@localhost:5432/app_funds -c 'drop schema public cascade; create schema public;'",
        "initdb": "npx ts-node src/database/initializeDB.ts",
        "resetTestDB": "psql postgresql://postgres:pw20220501@localhost:5432/app_funds_test -c 'drop schema public cascade; create schema public;'",
        "resetProdDB": "psql postgresql://postgres:pw20220501@localhost:5432/app_funds_prod -c 'drop schema public cascade; create schema public;'",
        "initProdDB": "node dist/database/initializeDB.js",
        "flushRedis": "redis-cli -a pw20220501 flushall"
    },
    "author": "",
    "license": "ISC",
